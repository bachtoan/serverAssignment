<script>
  var updateBtns = document.querySelectorAll("#update-btn");
  var updateModal = document.querySelector("#updateModal");
  var formUpdate = updateModal.querySelector("#formUpdate");

  updateBtns.forEach(function (btn) {
    btn.addEventListener("click", function () {
      var product = JSON.parse(btn.dataset.product);
      formUpdate.querySelector("#productId").value = product._id;

      formUpdate.querySelector("#productName").value = product.name;
      formUpdate.querySelector("#productGroup").textContent = product.id_group.name;


      formUpdate.querySelector("#productPrice").value = product.price;
      formUpdate.querySelector("#productDescription").value = product.description;
    });
  });
</script>

